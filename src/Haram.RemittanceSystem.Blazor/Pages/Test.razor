@page "/test"
<Container>
    <Row>
        <Column>
            <Blazorise.Dropdown>
                <DropdownToggle Text="Select an option" />
                <DropdownMenu>
                    @foreach (var option in options)
                    {
                        <DropdownItem @onclick="() => SelectOption(option)">@option</DropdownItem>
                    }
                    <DropdownItem Divider />
                    <DropdownItem>
                        <InputText @bind-Value="@customText" Placeholder="Enter custom text"></InputText>
                    </DropdownItem>
                </DropdownMenu>
            </Blazorise.Dropdown>
        </Column>
    </Row>
</Container>

@code {
    private string selectedValue;
    private List<string> options = new List<string> { "Option 1", "Option 2", "Option 3" };
    private string customText;

    private void SelectOption(string option)
    {
        selectedValue = option;
    }
}